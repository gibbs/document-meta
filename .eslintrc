{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.d.ts"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        // "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "standard-with-typescript"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
