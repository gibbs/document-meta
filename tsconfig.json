{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "ES2019"
    ],
    "module": "node16",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "typeRoots": ["node_modules/@types", "./src/types/*.d.ts"]
  },
  "include": ["./src/**/*"]
}
